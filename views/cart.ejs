<main id="main" class="main">
  <section class="section dashboard">
    <div class="row">
      <!-- Left side columns -->
      <div class="col-lg-8">
        <div class="row">
          <!-- Sales Card -->
          <div class="col-xxl-4 col-md-6">
            
                <% if (message.length !=0) { if (message[0].alert=='success' ) {
                %>
                <div class="alert alert-success" role="alert">
                  <%= message[0].message %>
                </div>
                <% } else if (message[0].alert=='warning' ) { %>
                <div class="alert alert-warning" role="alert">
                  <%= message[0].message %>
                </div>
                <% } else { %>
                <div class="alert alert-danger" role="alert">
                  <%= message[0].message %>
                </div>
                <% } } %> <% if (typeof errors !='undefined' ) { %>
                <div class="alert alert-danger" role="alert">
                  <% errors.forEach(error=> { %>
                  <li><%= error.msg %></li>
                  <% }) %>
                </div>
                <% } %>
                
              
           
          </div>

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Your Ordered</h5>

              <% if(dataCart.length == 0){ %>
                <div class="alert alert-warning" role="alert">
                  There are no items in the cart
                </div>
            <% } else { %>
              
              <!-- Table with hoverable rows -->
              <table class="table table-hover">
                
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Qty</th>
                    <th scope="col"></th>
                    <th scope="col">Sub Total</th>
                    <th scope="col">Total</th>
                  </tr>
                </thead>
                <% dataCart.forEach(data => { %>
                <tbody>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td>
                    <a
                      href="/sub-cart/:product_id"
                      class="btn btn-primary btn-md position-relative"
                    >
                      -
                    </a>
                    <a href="/sum-cart/:product_id" class="btn btn-primary btn-md position-relative"
                      >+</a
                    >
                  </td>
                  <td></td>
                  <td></td>
                  <% }) %>
                </tbody>
              </table>
              <div
                style="
                  display: flex;
                  width: 100%;
                  border: radius 50px;
                  justify-content: end;
                  margin-bottom: 12px;
                "
              >
                <a href="/items/add" class="btn btn-outline-primary">Buy</a>
              </div>
            </div>
          </div>
          

                    <% } %>
  </section>
</main>

