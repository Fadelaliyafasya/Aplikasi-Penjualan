<main id="main" class="main">
  <section class="section">
    <div class="row">
      <div class="col-lg-8">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Form Add Items</h5>

            <% if(typeof errors != "undefined") { %>
            <div class="alert alert-primary" role="alert">
              <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
              <% }) %>
            </div>
            <% } %>

            <form
              action="/products/PC/add"
              method="post"
              class="row g-3"
              enctype="multipart/form-data"
            >
              <div class="col-12">
                <label for="username" class="form-label">Product Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="product_name"
                  name="product_name"
                  required
                />
              </div>

              <div class="col-12">
                <label for="description" class="form-label">Description</label>
                <input
                  type="text"
                  class="form-control"
                  id="description"
                  name="description"
                  required
                />
              </div>
              <div class="col-12">
                <label for="price" class="form-label">Price</label>
                <input
                  type="text"
                  class="form-control"
                  id="price"
                  name="price"
                  required
                />
              </div>
              <div class="col-12">
                <label for="stock" class="form-label">Stock</label>
                <input
                  type="text"
                  class="form-control"
                  id="stock_quantity"
                  name="stock_quantity"
                  required
                />
              </div>
              <!-- <div class="col-12">
                <label for="image" class="form-label">Product Image</label>
                <input
                  type="file"
                  class="form-control"
                  id="image"
                  name="image"
                  placeholder="File"
                  accept="image/*"
                  required
                />
              </div> -->

              <div class="col-12">
                <label for="category" class="form-label">Category</label>
                <input
                  type="text"
                  class="form-control"
                  id="category"
                  name="category"
                  required
                />
              </div>

              <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
                <a href="/items" class="btn btn-primary"
                  >Back to previous page</a
                >
              </div>
            </form>
            <!-- Vertical Form -->
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
