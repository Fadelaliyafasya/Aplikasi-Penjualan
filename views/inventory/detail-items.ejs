<main id="main" class="main">
  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <!-- <h5 class="card-title">Detail</h5> -->
            <div class="tab-content pt-2">
              <% if (products) { %>
              <div
                class="tab-pane fade show active profile-overview"
                id="profile-overview"
              >
                <h5 class="card-title">Description</h5>
                <p class="small fst" style="font-size: 18px">
                  <%= products.description %>
                </p>

                <h5 class="card-title">--------------------</h5>

                <div class="row">
                  <div
                    class="col-lg-3 col-md-4 label"
                    style="font-family: Poppins; font-size: 18px"
                  >
                    Product ID
                  </div>

                  <div
                    class="col-lg-9 col-md-8"
                    style="font-family: Poppins; font-size: 18px"
                  >
                    : <%= products.product_id %>
                  </div>
                </div>
                <br />

                <div class="row">
                  <div
                    class="col-lg-3 col-md-4 label"
                    style="font-family: Poppins; font-size: 18px"
                  >
                    Product Name
                  </div>

                  <div
                    class="col-lg-9 col-md-8"
                    style="font-family: Poppins; font-size: 18px"
                  >
                    : <%= products.product_name %>
                  </div>
                </div>
                <br />
                <div class="row">
                  <div
                    class="col-lg-3 col-md-4 label"
                    style="font-family: Poppins; font-size: 18px"
                  >
                    Category
                  </div>
                  <div
                    class="col-lg-9 col-md-8"
                    style="font-family: Poppins; font-size: 18px"
                  >
                    : <%= products.category %>
                  </div>
                </div>
                <br />
                <div class="row">
                  <div
                    class="col-lg-3 col-md-4 label"
                    style="font-family: Poppins; font-size: 18px"
                  >
                    Price
                  </div>
                  <div
                    class="col-lg-9 col-md-8"
                    style="font-family: Poppins; font-size: 18px"
                  >
                    : Rp. <%= products.price %>
                  </div>
                </div>
                <br />
                <% } else { %>
                <p style="font-family: Poppins; font-size: 18px">
                  Product not found
                </p>
                <% } %>
              </div>
            </div>
            <!-- End Bordered Tabs -->

            <a href="/items" class="btn btn-primary">Back to previous page</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
